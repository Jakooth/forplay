<?xml version="1.0" encoding="utf-8"?>
<covers>
    <cover align="{{:bgH}}" 
		   valign="{{:bgV}}"
		   theme="{{:theme}} {{:subtheme}}">
        <site>{{:site}}</site>
        <url>{{:url}}</url>
        <prime>{{:prime}}</prime>
        <tags>
            <!--tags-->
        </tags>
        <cover>{{:cover}}</cover>
        <main main320="{{:main320}}" 
			  main640="{{:main640}}">{{:main}}</main>
        <type bg="{{~toBg(type)}}">{{:type}}</type>
        <subtype bg="{{~toBg(subtype)}}">{{:subtype}}</subtype>
        <title>
            <![CDATA[{{:title}}]]>
        </title>
        <subtitle>
            <![CDATA[{{:subtitle}}]]>
        </subtitle>
        <author>{{:author}}</author>
        <hype>{{:hype}}</hype>
        <better tag="{{:better}}">
            <!--better-->
        </better>
        <worse tag="{{:worse}}">
            <!--worse-->
        </worse>
        <equal tag="{{:equal}}">
            <!--equal-->
        </equal>
        <date>{{:date}}</date>
    </cover>
</covers>
